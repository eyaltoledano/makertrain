<section class="hero is-dark is-bold is-large" id="dashboard_hero">

  <div class="hero-body ">
    <div class="container">
      <div class="columns">
        <div class="column">
          <h1 class="title">
            <%= @task.name %>
          </h1>
          <p class="subtitle is-tag is-white">
            <a class="tag is-link" href="/products/<%= @task.version.product.slug %>/versions/<%= @task.version.version_number%>"><%= "#{@task.version.product.name}  #{@task.version.version_number}" %></a>
          </p>
          <div class="content is-medium">
            <p><%= @task.description %></p>
          </div>
        </div>
        <div class="column">
          <span class="level is-centered">

            <div class="level-item has-text-centered">
              <div>
                <p class="heading">Task Reward</p>
                <p class="title has-text-success">$<%= sprintf "%.2f", @task.reward %></p>
              </div>
            </div>
            <div class="level-item has-text-centered">
              <div>
                <p class="heading">Task Status</p>
                <p class="title"><span class="tag is-light is-large"><%= @task.status%></span></p>
              </div>
            </div>

            <div class="level-item has-text-centered">
              <div>
                <% if @task.user_id == nil %>
                <p class="heading">Claim this task</p>

                <a data-target="#claimModal" aria-haspopup="true" class="title modal-button button is-success is-large">
                  Claim this task
                </a>

                <!-- Start Claim modal -->
                <%= render partial: '/shared/claim_task_modal', locals: { task: @task } %>
                <!-- End Claim Modal -->

                <%else%>
                <p class="heading">Claim this task</p>
                  <form>
                  <input class="button is-light is-medium" type="submit" value="Claimed by <%= @task.user.name %>" disabled>
                  </form>
                <%end%>
              </div>
            </div>

          </span>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Start Modal Open/Close Button -->

<%= render '/shared/modal_open_and_close' %>

<!-- End Modal Open/Close Button -->
