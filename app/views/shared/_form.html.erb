<div class="columns">
  <div class="column is-4 is-offset-4">
    <%= form_tag(sessions_path) do %>

        <div class="form-group">
          <div class="field">
            <%= text_field_tag :email, nil, placeholder: "Enter your username or email", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= password_field_tag :password, nil, placeholder: "Enter your password", class: 'form-control' %>
          </div>
        </div>


        <div class="field is-grouped d-flex justify-content-center">
          <div class="control">
            <%= link_to "Don't have an account?", new_user_path, class: 'button is-text' %>
          </div>
          <div class="control">
            <%= submit_tag "Login", class: 'btn btn-primary' %>
          </div>
        </div>

    <% end %>
  </div>
</div>
