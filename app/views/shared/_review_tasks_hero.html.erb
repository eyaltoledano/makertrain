<section class="hero is-bold" id="dashboard_hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">

        <div class="column">
          <nav class="level">

            <div class="column is-4">
              <h1 class="title lead">
                Task Review
              </h1>
              <h2 class="subtitle">
                  <% if !@user.has_no_claimed_tasks? %>
                    <span class="tag is-link"><%= tasks_to_work_on_text %></span>
                  <% end %>

                  <% if @user.has_items_for_review? %>
                    <span class="tag is-warning"><%= open_tasks_for_review_text %></span>
                  <% end %>
                </p>
              </h2>
            </div>

            <div class="level-item has-text-centered">
              <div>
                <p class="heading">Tasks To Review</p>
                <p class="title has-text-weight-semibold">
                  <%= @user.claimed_tasks_count %>
                </p>
              </div>
            </div>

          </nav>

        </div>

      </div>
    </div>
  </div>
</section>
