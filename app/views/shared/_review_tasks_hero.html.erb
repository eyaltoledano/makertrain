<section class="<%=dashboard_hero_class_name%>" id="dashboard_hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">

        <div class="column">
          <nav class="level">

            <div class="column is-half">
              <h1 class="title lead">
                <i class="em <%=@greeting[:emoji]%>"></i>
                There are some tasks to review
              </h1>
              <h2 class="subtitle">
                  <% if @user.has_items_for_review? %>
                    <span class="badge badge-primary"><%= open_tasks_for_review_text %></span>
                  <% end %>
                </p>
              </h2>
            </div>

            <div class="level-item has-text-centered">
              <div>
                <p class="heading">Tasks To Review</p>
                <p class="title has-text-weight-semibold">
                  <%= @user.claimed_tasks_count %>
                </p>
              </div>
            </div>

          </nav>

        </div>

      </div>
    </div>
  </div>
</section>
